<%- include('../partials/header.ejs', {subPage: post.subPage, isLogin: isLogin}) %> 

<div class="card mb-3">
    <img src="<%= post.img%>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= post.title%></h5>
      <p class="card-text"><%= post.description%></p>
      <div>
        <% if (author) {%> 
        <a class="card-text" href="/r/<%=post.subPage.title%>/<%=post._id%>/edit"><small class="text-muted">Edit</small></a>
        <form action="/r/<%=post.subPage.title%>/<%=post._id%>/?_method=DELETE" method="POST" class="d-inline">
          <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <% } %> </div>
    </div>
  </div>


  